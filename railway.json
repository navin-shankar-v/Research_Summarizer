{
  "services": {
    "backend": {
      "name": "backend",
      "build": {
        "dockerfilePath": "Dockerfile.backend"
      },
      "env": {
        "LLM_PROVIDER": "openai",
        "OPENAI_API_KEY": "@OPENAI_API_KEY",
        "OPENAI_MODEL": "gpt-4o-mini",
        "OPENAI_BASE_URL": "https://api.openai.com/v1",
        "HOST": "0.0.0.0",
        "PORT": "8000"
      }
    },
    "frontend": {
      "name": "frontend",
      "build": {
        "dockerfilePath": "Dockerfile.frontend"
      },
      "env": {
        "API_URL": "https://${{ backend.PUBLIC_URL }}"
      }
    }
  }
}
