FROM python:3.10-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY api ./api
COPY agents ./agents
COPY config ./config
COPY retrieval ./retrieval

# Render injects PORT
ENV PORT=$PORT

EXPOSE 8000

CMD uvicorn api.main:app --host 0.0.0.0 --port $PORT
